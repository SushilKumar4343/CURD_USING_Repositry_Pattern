@model CURD_Using_Repository.Models.User
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-4 rounded rounded-3 p-4">
            <h3 class="text-info text-center p-2 m-1">Update Recod</h3>
            <form method="post" asp-action="Edit">
                <div class="form-check">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <input type="hidden" asp-for="UserId" />
                </div>
                <div class="form-check">
                    <label asp-for="Gender"></label><br />
                    <label>
                        <input type="radio" class="form-check-inline" name="Gender" asp-for="Gender" value="Male" />Male
                    </label>
                    <label>
                        <input type="radio" class="form-check-inline" name="Gender" asp-for="Gender" value="FeMale" />FeMale
                    </label>
                    <label>
                        <input type="radio" class="form-check-inline" name="Gender" asp-for="Gender" value="Other" />Other
                    </label>
                </div>
                <div class="form-check">
                    <label asp-for="Email"></label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email" />
                </div>
                <div class="form-check">
                    <label asp-for="PinCode"></label>
                    <input type="number" asp-for="PinCode" class="form-control" placeholder="Enter PinCode" />
                </div>
                <div class="form-check">
                    <label asp-for="IsActive"></label>
                    @if (Model.IsActive == true)
                    {
                        <input type="checkbox" asp-for="IsActive" class="form-check-inline" checked="checked" />
                    }
                    else
                    {
                        <input type="checkbox" asp-for="IsActive" class="form-check-inline"/>
                    }
                </div>
                <div>
                    <button class="btn  btn-sm btn-success float-left m-2 p-2" asp-action="GetUserList" asp-controller="User">Back</button>
                    <input type="submit" class="btn btn-sm btn-warning m-2 p-2 float-right" value="Update" />
                </div>
            </form>
        </div>
    </div>
</div>

